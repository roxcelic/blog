---
export function getStaticPaths() {
  return [
    //tags
    {params: {term: 'school'}},
    {params: {term: 'music'}},
    {params: {term: 'calander'}},
    {params: {term: 'tech'}},
    {params: {term: 'website'}},
    {params: {term: 'android'}},

    //authers
    {params: {term: 'roxie'}},

    //easteregg
    {params: {term: 'chicken nuggies'}},
  ];
}
const { term } = Astro.params;

import Layout from '../../layouts/full.astro'
import Link from '../../comp/link.astro';
import Image from '../../comp/image.astro'
import { getSortedPosts } from '../../lib/posts';
const posts = getSortedPosts(term);
---
<Layout desc={term} title={term}>
    <contents>

        <div class="top">
            <div id="menu-container">
                <div id="menu">
                    <p><a href="https://roxcelic.love/">home</a></p>
                    <p>|</p>
                    <p><a href="/">extra</a></p>
                    <p>|</p>
                    <p><a href="https://roxcelic.love/hf/">fun!</a></p>
                    <p>|</p>
                    <p><a href="https://roxcelic.love/roxie/">roxie</a></p>
                </div>
                <div class="bar" id="holt2"/>
            </div>
        </div>

        <Image />
        <main>
            <div class="parent">
                <div class="child" style="display:block;max-height: 500px;">
                    <h2>Hey!</h2>
                    <p style="margin-bottom: 5vh;">
                        Welcome to my blog!<br>
                        Showing results for: <code>{term}</code>
                        <br><br>
                        enjoy my semi-sentient chowder
                    </p>
                    <p style="font-size: xx-small;">wanna go <a href="../../blog">back</a>?</p>
                    <div style="width: 100%; height: 3px; background-color: white;margin:0;"/>
                    <div class="blogp">
                        {posts.map((post) => <Link url={post.url} title={post.title} dates={post.upDate} auth={ post.auth } desc={post.desc} writedate={ post.writeDate} tags={ post.tags}/>)}
                    </div>
                </div>
            </div>
        </main>
    </contents>
</Layout>