---
import Layout from '../astro/main.astro';
import PostTitle from '../../components/post-title.astro';
const { frontmatter } = Astro.props;
---
<Layout desc={ frontmatter.desc } title={ frontmatter.title }>
    <a href="../../../" style="background: none;">
        <span class="material-symbols-outlined" style="display: inline;color:palevioletred">arrow_back</span>
        <h3 style="margin:0;padding:0;margin-top: 1vh;margin-left: 1vh;">
            back
        </h3>
    </a>
    <PostTitle
        title={frontmatter.title}
        desc={frontmatter.desc}
        tags={frontmatter.tags}
    />
    <slot/>
    <details>
        <summary>comments</summary>
            <script src="https://giscus.app/client.js"
                data-repo="roxcelic/blog"
                data-repo-id="R_kgDOMFba5w"
                data-category="Announcements"
                data-category-id="DIC_kwDOMFba584ChuBw"
                data-mapping="url"
                data-strict="0"
                data-reactions-enabled="1"
                data-emit-metadata="0"
                data-input-position="bottom"
                data-theme="https://files.roxcelic.love/themes/gis.css"
                data-lang="en"
                crossorigin="anonymous"
                async />
    </details>
    <div style="margin-bottom: 5vh;"/>
</Layout>