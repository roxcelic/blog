---
const { title, desc, tags } = Astro.props;
---
<div style="margin-top: 2.5vh;">
    <hr>
</div>
<div class="post" id={title + "|" + desc + "|" + tags.join(", ")}>
    <div style="padding-bottom: 1vh;">
        <h3 style="margin: 0;padding-bottom: 0; text-align: left;">{title}</h3>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <p style="margin: 0;width:70%">{desc}</p>
            <p style="margin: 0; text-align: right;width:20%;">{tags.join(", ")}</p>
        </div>
    </div>
    <div style="margin-bottom: 2.5vh;">
        <hr>
    </div>
</div>
